# IBM Cloud → 管理 → アクセス → APIキー
export IBM_API_KEY="your-ibm-cloud-api-key"

# wxO UI → 設定 → APIの詳細 → サービス・インスタンスURL（末尾スラッシュなし）
export INSTANCE_URL="https://api.us-south.watson-orchestrate.cloud.ibm.com/instances/your-instance-id"

# wxO UI → 対象エージェント → チャネル → 組み込みエージェント → Webサイトに埋め込む → サンプルembedコード内の agentId
export AGENT_ID="your-agent-id"

# Liveの場合はembedコードの agentEnvironmentId を設定、Draftは空のままにする（check.shで自動取得）
export ENVIRONMENT_ID=""

# api.slack.com → アプリ → OAuth & Permissions → Bot User OAuth Token
export SLACK_BOT_TOKEN="xoxb-your-bot-token-here"

# 以下は INSTANCE_URL から自動設定されます（編集不要）
export BASE_URL="${INSTANCE_URL}/v1/orchestrate"
